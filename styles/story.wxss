  .story {
    padding-left: 20rpx;
    padding-right: 20rpx;
  }


  .section_ {
    height: 58vh;
  }

  .story.white {
    background: #ffffff;
  }

  .story .content {
    display: flex;
    flex-direction: column;
    height: 10vh;
    padding-top: 6%;
    text-align: center;
  }

  .story .header {
    font-size: 42rpx;
    font-weight: bold;
    margin-bottom: 6px;
  }

  .story .sub-header {
    font-size: 28rpx;
    text-transform: uppercase;
    letter-spacing: 6rpx;
    margin-bottom: 8px;
    color: rgba(0, 0, 0, 0.75);
  }

  .story .description {
    font-size: 24rpx;
    padding: 0 12%;
  }

  .story image, .story video {
    border-radius:5px; 
    height: 36vh;
  }
